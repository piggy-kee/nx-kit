{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleDetection": "force",
    "composite": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "noEmit": false,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noErrorTruncation": false,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "suppressExcessPropertyErrors": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ESNext",
    "incremental": true,
    "removeComments": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@org/icons": ["packages/icons/src/index"],
      "@org/icons/*": ["packages/icons/src/*"],

      "@org/shared": ["packages/shared/build/index"],
      "@org/shared/*": ["packages/shared/build/*"],

      "@org/types": ["packages/types/build/index"],
      "@org/types/*": ["packages/types/build/*"],

      "@org/ui": ["packages/ui/build/index"],
      "@org/ui/*": ["packages/ui/build/*"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", "build"]
}
